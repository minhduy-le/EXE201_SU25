{
  "expo": {
    "name": "TamTac_App",
    "slug": "TamTac_App",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./src/assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "scheme": "tamtac-app",
      "bundleIdentifier": "com.tamtac.app",
      "infoPlist": {
        "NSFaceIDUsageDescription": "Sử dụng Face ID để đăng nhập nhanh"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "scheme": "tamtac-app",
      "package": "com.tamtac.app",
      "permissions": ["USE_BIOMETRICS"]
    },
    "web": {
      "favicon": "./src/assets/favicon.png"
    },
    "scheme": "tamtac-app",
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-local-authentication",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
